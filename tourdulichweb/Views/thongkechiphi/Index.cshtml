@model tourdulichweb.Models.thongkechiphiviewmodel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "thongkechiphi", FormMethod.Get))
{
    <div class="form-inline">
        @Html.Label("Tên đoàn du lịch")
        <div class="form-group">
            @Html.DropDownList("iddoandulich", null, new { @class = "form-control" })
        </div>
        @Html.Label("Loại chi phí")
        <div class="form-group">
            @Html.DropDownList("idloaiphieu", null, new { @class = "form-control"})
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="Index" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<p>@Html.DisplayFor(m => m.tenloaiphieu)</p>
<table class="table">
    <tr>
        <th>
            Tên chi phí
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Tổng
        </th>
    </tr>

@foreach (var item in Model.ctcps) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tenchiphi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.soluong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tong)
        </td>
    </tr>
}
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>@Html.DisplayFor(m => m.tong)</td>
    </tr>
</table>
